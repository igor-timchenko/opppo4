class Product:
  def __init__(self, name, quantity, price_per_unit):
    self.name = name # Наименование товара
    self.quantity = quantity # Количество на складе
    self.price_per_unit = price_per_unit # Цена за единицу
  def total_value(self):
    """Метод для вычисления общей стоимости товара на складе."""
    return self.quantity * self.price_per_unit
def main():
  products = [] # Список для хранения товаров
  while True:
    name = input("Введите наименование товара (или 'стоп' для завершения): ")
    if name.lower() == 'стоп':
      break # Завершение ввода данных
    # Ввод количества и цены с проверкой на корректность
    while True:
      try:
        quantity = int(input("Введите количество на складе: "))
        if quantity < 0:
          raise ValueError("Количество не может быть отрицательным.")
        break
      except ValueError as e:
        print(f"Ошибка ввода: {e}. Пожалуйста, введите корректное количество.")
    # Создание объекта Product и добавление его в список
    product = Product(name, quantity, price_per_unit)
    products.append(product) # Добавление товара в список
  # Вывод итоговой информации
  print("\nИнформация о товарах на складе:")
  total_inventory_value = 0 # Переменная для общей стоимости товаров
  for product in products:
    product_value = product.total_value() # Расчет стоимости каждого товара
    total_inventory_value += product_value # Суммирование общей стоимости
    print(f"{product.name}: {product.quantity} шт.,\n "
      f"Цена за единицу: {product.price_per_unit:.2f} руб.,\n "
      f"Общая стоимость: {product_value:.2f} руб.")
    print ("\n")
  print(f"Общая стоимость всех товаров на складе: {total_inventory_value:.2f} руб.") # Вывод общей стоимости
if __name__ == "__main__":
  main()
